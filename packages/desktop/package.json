{
  "name": "@rediacc/desktop",
  "version": "0.6.0",
  "private": true,
  "scripts": {
    "build": "electron-vite build",
    "bundle:msys2": "bash ../../scripts/extract-msys2-bundle.sh --ci --output ./msys2-bundle",
    "dev": "electron-vite dev",
    "dev:mac-arm64": "REDIACC_DISABLE_PROTOCOL_HANDLER=1 electron-vite dev",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run bundle:msys2 && npm run build && electron-builder --win",
    "lint": "eslint src --ext .ts",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "preview": "electron-vite preview",
    "preview:mac-arm64": "REDIACC_DISABLE_PROTOCOL_HANDLER=1 electron-vite preview",
    "rebuild": "electron-rebuild",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload",
    "typecheck:main": "tsc --noEmit -p tsconfig.node.json",
    "typecheck:preload": "tsc --noEmit -p tsconfig.node.json"
  },
  "author": "Rediacc <support@rediacc.com>",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.982.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/context-zone": "^2.5.0",
    "@opentelemetry/core": "^2.5.0",
    "@opentelemetry/instrumentation": "^0.211.0",
    "@opentelemetry/instrumentation-fetch": "^0.211.0",
    "@opentelemetry/instrumentation-xml-http-request": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/sdk-trace-web": "^2.5.0",
    "@rediacc/shared-desktop": "*",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/runner": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "@vitest/utils": "^4.0.18",
    "electron-updater": "^6.8.3",
    "node-pty": "^1.1.0",
    "react-i18next": "^16.5.4",
    "ssh2": "^1.17.0",
    "tiny-typed-emitter": "^2.1.0",
    "unist-util-visit": "^5.1.0",
    "zod": "^4.3.6"
  },
  "description": "Rediacc Desktop Application",
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/rebuild": "^4.0.3",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^22.10.2",
    "@types/ssh2": "^1.15.5",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "39.2.7",
    "electron-builder": "^26.8.1",
    "electron-log": "^5.4.3",
    "electron-vite": "^5.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3"
  },
  "homepage": "https://www.rediacc.com",
  "main": "./out/main/index.js",
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rediacc/console.git",
    "directory": "packages/desktop"
  }
}
