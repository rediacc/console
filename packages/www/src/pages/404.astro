---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import StructuredData from '../components/StructuredData.astro';
import { createTranslator } from '../i18n/utils';

const { t } = createTranslator();

const breadcrumbItems = [
  { name: t('pages.notFound.breadcrumb.home'), url: '/' },
  { name: t('pages.notFound.breadcrumb.notFound'), url: '/404' }
];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebPage',
  'name': '404 - Page Not Found',
  'description': 'The requested page could not be found on this website.',
  'url': 'https://www.rediacc.com/404',
  'mainEntity': {
    '@type': 'Thing',
    'name': 'Page Not Found Error',
    'description': 'HTTP 404 error indicating the requested resource was not found'
  },
  'isPartOf': {
    '@type': 'WebSite',
    'name': 'Rediacc - Infrastructure Automation Platform',
    'url': 'https://www.rediacc.com'
  }
};
---

<BaseLayout
  title={t('pages.notFound.meta.title')}
  description={t('pages.notFound.meta.description')}
  keywords={t('pages.notFound.meta.keywords')}
  ogType="website"
  structuredDataType="organization"
  robots="noindex, nofollow, noarchive, nosnippet"
  canonical="https://www.rediacc.com/404"
>
  <Fragment slot="head">
    <!-- Custom structured data for 404 page -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>
  <div class="container">
    <Breadcrumb items={breadcrumbItems} />
  </div>

  <section class="error-page">
    <div class="container">
      <div class="error-content">
        <div class="error-illustration">
          <div class="error-code">404</div>
          <div class="error-icon">
            <svg width="120" height="120" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <circle cx="60" cy="60" r="50" stroke="currentColor" stroke-width="4" fill="none" opacity="0.2"/>
              <path d="M40 45 L80 75 M80 45 L40 75" stroke="currentColor" stroke-width="4" stroke-linecap="round"/>
              <circle cx="60" cy="60" r="8" fill="currentColor" opacity="0.3"/>
            </svg>
          </div>
        </div>

        <div class="error-text">
          <h1 class="error-title">{t('pages.notFound.title')}</h1>
          <p class="error-description">
            {t('pages.notFound.description')}
          </p>

          <div class="error-suggestions">
            <h2>{t('pages.notFound.suggestions.title')}</h2>
            <ul>
              <li>{t('pages.notFound.suggestions.items.0')}</li>
              <li>Go back to the <a href="/">{t('pages.notFound.suggestions.links.homepage')}</a></li>
              <li>Learn about our <a href="/#solutions">{t('pages.notFound.suggestions.links.solutions')}</a></li>
              <li>Get in touch through our <a href="/contact">{t('pages.notFound.suggestions.links.contact')}</a></li>
              <li>Request <a href="/#early-access">{t('pages.notFound.suggestions.links.earlyAccess')}</a> to our platform</li>
            </ul>
          </div>

          <div class="error-actions">
            <a href="/" class="btn btn-primary">{t('pages.notFound.actions.homepage')}</a>
            <a href="/contact" class="btn btn-secondary">{t('pages.notFound.actions.contactSupport')}</a>
          </div>
        </div>
      </div>

      <div class="error-help">
        <h3>{t('pages.notFound.help.title')}</h3>
        <p>
          {t('pages.notFound.help.description')}
          <a href="/contact">{t('pages.notFound.help.link')}</a>. We're here to help you
          find what you're looking for.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
.error-page {
  padding: var(--space-20) 0;
  min-height: 60vh;
  display: flex;
  align-items: center;
}

.error-content {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: var(--space-12);
  align-items: center;
  margin-bottom: var(--space-16);
}

.error-illustration {
  text-align: center;
}

.error-code {
  font-size: 6rem;
  font-weight: 800;
  color: var(--color-brand-primary);
  line-height: var(--leading-none);
  margin-bottom: var(--space-4);
  opacity: var(--opacity-70);
}

.error-icon {
  color: var(--color-text-secondary);
  margin-bottom: var(--space-4);
}

.error-title {
  font-size: var(--font-size-4xl);
  color: var(--color-text);
  margin-bottom: var(--space-4);
  font-weight: var(--font-weight-bold);
}

.error-description {
  font-size: var(--font-size-lg);
  color: var(--color-text-secondary);
  line-height: var(--leading-relaxed);
  margin-bottom: var(--space-8);
}

.error-suggestions {
  margin-bottom: var(--space-8);
}

.error-suggestions h2 {
  font-size: var(--font-size-xl);
  color: var(--color-text);
  margin-bottom: var(--space-4);
  font-weight: var(--font-weight-semibold);
}

.error-suggestions ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.error-suggestions li {
  padding: var(--space-2) 0;
  color: var(--color-text-secondary);
  border-inline-start: 3px solid var(--color-brand-primary);
  padding-inline-start: var(--space-4);
  margin-bottom: var(--space-2);
}

.error-suggestions a {
  color: var(--color-brand-primary);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
}

.error-suggestions a:hover {
  text-decoration: underline;
}

.error-suggestions a:focus-visible {
  outline: 2px solid var(--color-brand-primary);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

.error-actions {
  display: flex;
  gap: var(--space-4);
  flex-wrap: wrap;
}

.error-help {
  background: var(--color-bg-alt);
  padding: var(--space-8);
  border-radius: var(--radius-md);
  border: 1px solid var(--color-border);
  text-align: center;
}

.error-help h3 {
  color: var(--color-text);
  margin-bottom: var(--space-4);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
}

.error-help p {
  color: var(--color-text-secondary);
  line-height: var(--leading-relaxed);
  margin: 0;
}

.error-help a {
  color: var(--color-brand-primary);
  text-decoration: none;
  font-weight: var(--font-weight-medium);
}

.error-help a:hover {
  text-decoration: underline;
}

.error-help a:focus-visible {
  outline: 2px solid var(--color-brand-primary);
  outline-offset: 2px;
  border-radius: var(--radius-sm);
}

/* Responsive Design */
@media (max-width: 48rem) {
  .error-content {
    grid-template-columns: 1fr;
    gap: var(--space-8);
    text-align: center;
  }

  .error-code {
    font-size: 4rem;
  }

  .error-title {
    font-size: var(--font-size-3xl);
  }

  .error-actions {
    justify-content: center;
  }

  .error-help {
    padding: var(--space-6);
  }
}

@media (max-width: 30rem) {
  .error-actions {
    flex-direction: column;
  }

  .error-actions .btn {
    width: 100%;
    text-align: center;
  }
}
</style>