---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import DocsSidebar from '../../../components/DocsSidebar.astro';
import { createTranslator } from '../../../i18n/utils';
import { getLanguagePaths } from '../../../i18n/language-utils';
import type { Language } from '../../../i18n/types';
import { getBaseSlug } from '../../../utils/slug';
import '../../../styles/sidebar-shared.css';

export const getStaticPaths = getLanguagePaths;

const { lang } = Astro.props as { lang: Language };
const { t } = createTranslator(lang);

// Get docs for current language, sorted by category and order
const allDocs = await getCollection('docs');
const docs = allDocs
  .filter((doc) => doc.data.language === lang)
  .sort((a, b) => {
    const categorySort = (a.data.category || 'other').localeCompare(
      b.data.category || 'other'
    );
    if (categorySort !== 0) return categorySort;
    return (a.data.order ?? 999) - (b.data.order ?? 999);
  });

// Group docs by category
const docsByCategory = docs.reduce((acc, doc) => {
  const category = doc.data.category || 'Other';
  if (!acc[category]) acc[category] = [];
  acc[category].push(doc);
  return acc;
}, {} as Record<string, typeof docs>);

const categories = Object.keys(docsByCategory).sort();

// Get the current page URL
const currentUrl = `/${lang}/docs/`;
---

<BaseLayout lang={lang} title={t('pages.docs.title')}>
  <div class="docs-page">
    <DocsSidebar currentLang={lang} currentUrl={currentUrl} />

    <section class="docs-content">
      <div class="welcome-section" id="welcome">
        <h2>{t('pages.docs.welcome')}</h2>
        <p>
          {t('pages.docs.welcomeDescription')}
        </p>

        <div class="quick-links" id="quick-links">
          <div class="quick-link-card">
            <h3>{t('pages.docs.gettingStarted')}</h3>
            <p>{t('pages.docs.gettingStartedDesc')}</p>
            <a href={`/${lang}/blog/getting-started-with-rediacc`} class="btn-link">{t('common.buttons.learnMore')} →</a>
          </div>
          <div class="quick-link-card">
            <h3>{t('pages.docs.cliReference')}</h3>
            <p>{t('pages.docs.cliReferenceDesc')}</p>
            <a href={`/${lang}/docs/cli-reference`} class="btn-link">{t('common.buttons.learnMore')} →</a>
          </div>
          <div class="quick-link-card">
            <h3>{t('pages.docs.queueSystem')}</h3>
            <p>{t('pages.docs.queueSystemDesc')}</p>
            <a href={`/${lang}/docs/queue-system`} class="btn-link">{t('common.buttons.learnMore')} →</a>
          </div>
        </div>
      </div>

      <section class="all-docs-section" id="all-documentation">
        <h2>{t('pages.docs.allDocumentation')}</h2>
        {categories.map(category => (
          <div class="doc-category" id={category.toLowerCase().replace(/\s+/g, '-')}>
            <h3>{category}</h3>
            <ul class="doc-items">
              {docsByCategory[category].map(doc => (
                <li>
                  <article class="doc-item">
                    <h4>
                      <a href={`/${lang}/docs/${getBaseSlug(doc.slug)}`}>{doc.data.title}</a>
                    </h4>
                    <p>{doc.data.description}</p>
                  </article>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </section>
    </section>

    <aside class="sidebar-base sidebar-toc toc-sidebar">
      <nav class="sidebar-nav sidebar-nav-with-accent toc-nav" role="navigation" aria-label="Table of contents">
        <h3 class="sidebar-title toc-title">{t('pages.docs.tableOfContents')}</h3>
        <ul class="sidebar-list toc-list">
          <li class="sidebar-item toc-item toc-level-2">
            <a href="#welcome" class="sidebar-link toc-link">{t('pages.docs.welcome')}</a>
          </li>
          <li class="sidebar-item toc-item toc-level-2">
            <a href="#quick-links" class="sidebar-link toc-link">Quick Links</a>
          </li>
          <li class="sidebar-item toc-item toc-level-2">
            <a href="#all-documentation" class="sidebar-link toc-link">{t('pages.docs.allDocumentation')}</a>
          </li>
          {categories.map(category => (
            <li class="sidebar-item toc-item toc-level-3">
              <a href={`#${category.toLowerCase().replace(/\s+/g, '-')}`} class="sidebar-link toc-link">
                {category} <span class="doc-count">({docsByCategory[category].length})</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </aside>
  </div>

  <style>
    .docs-page {
      display: grid;
      grid-template-columns: 250px 1fr 250px;
      gap: var(--space-8);
      max-width: var(--container-2xl);
      margin: 0 auto;
      padding: calc(var(--nav-height) + var(--space-8)) var(--space-4) var(--space-8) var(--space-4);
    }

    .docs-content {
      display: flex;
      flex-direction: column;
      gap: var(--space-12);
      grid-column: 2;
    }

    .welcome-section h2 {
      font-size: var(--font-size-2xl);
      margin-bottom: var(--space-4);
    }

    .welcome-section p {
      font-size: var(--font-size-lg);
      color: var(--color-text-secondary);
      margin-bottom: var(--space-8);
      line-height: var(--leading-relaxed);
    }

    .quick-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--space-6);
      margin-bottom: var(--space-8);
    }

    .quick-link-card {
      padding: var(--space-6);
      background-color: var(--color-hover);
      border-radius: var(--radius-md);
      border-inline-start: 4px solid var(--color-text);
    }

    .quick-link-card h3 {
      margin: 0 0 var(--space-2) 0;
      font-size: var(--font-size-lg);
    }

    .quick-link-card p {
      margin: var(--space-2) 0;
      color: var(--color-text-secondary);
      font-size: var(--font-size-sm);
    }

    .btn-link {
      display: inline-block;
      margin-top: var(--space-4);
      color: var(--color-text);
      text-decoration: none;
      font-weight: var(--font-weight-medium);
      transition: color var(--transition-duration-base);
    }

    .btn-link:hover {
      color: var(--color-brand-primary);
    }

    .btn-link:focus-visible {
      outline: 2px solid var(--color-brand-primary);
      outline-offset: 2px;
      border-radius: var(--radius-sm);
    }

    .all-docs-section h2 {
      font-size: var(--font-size-xl);
      margin: var(--space-8) 0 var(--space-6) 0;
      border-top: 2px solid var(--color-border);
      padding-top: var(--space-4);
    }

    .doc-category {
      margin-bottom: var(--space-8);
    }

    .doc-category h3 {
      font-size: var(--font-size-xl);
      color: var(--color-text);
      margin-bottom: var(--space-4);
    }

    .doc-items {
      list-style: none;
      padding: 0;
      margin: 0;
      display: flex;
      flex-direction: column;
      gap: var(--space-4);
    }

    .doc-item {
      padding: var(--space-4);
      background-color: var(--color-bg-light);
      border-radius: var(--radius-md);
      border-inline-start: 3px solid var(--color-text);
      transition: background-color var(--transition-duration-base);
    }

    .doc-item:hover {
      background-color: var(--color-hover);
    }

    .doc-item h4 {
      margin: 0 0 var(--space-2) 0;
      font-size: var(--font-size-lg);
    }

    .doc-item h4 a {
      color: var(--color-text);
      text-decoration: none;
    }

    .doc-item h4 a:hover {
      color: var(--color-brand-primary);
      text-decoration: underline;
    }

    .doc-item h4 a:focus-visible {
      outline: 2px solid var(--color-brand-primary);
      outline-offset: 2px;
      border-radius: var(--radius-sm);
    }

    .doc-item p {
      margin: 0;
      color: var(--color-text-secondary);
      font-size: var(--font-size-sm);
      line-height: var(--leading-relaxed);
    }

    .doc-count {
      color: var(--color-text-secondary);
      font-size: var(--font-size-sm);
      font-weight: var(--font-weight-normal);
    }

    /* Add scroll offset for anchor links */
    #welcome,
    #quick-links,
    #all-documentation,
    .doc-category {
      scroll-margin-top: calc(var(--nav-height) + var(--space-8));
    }

    @media (max-width: 75rem) {
      .toc-sidebar {
        display: none;
      }

      .docs-page {
        grid-template-columns: 250px 1fr;
      }
    }

    @media (max-width: 48rem) {
      .docs-page {
        grid-template-columns: 1fr;
        gap: var(--space-4);
        padding: var(--space-4) var(--space-2);
      }

      .docs-nav {
        position: static;
        top: auto;
      }

      .docs-header h1 {
        font-size: var(--font-size-2xl);
      }

      .quick-links {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
