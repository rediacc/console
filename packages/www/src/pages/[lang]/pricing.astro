---
import { getLanguagePaths } from '../../i18n/language-utils';
import type { Language } from '../../i18n/types';

export const getStaticPaths = getLanguagePaths;

const { lang } = Astro.params as { lang: Language };
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8">
  <meta http-equiv="refresh" content={`0;url=/${lang}/#pricing`}>
  <link rel="canonical" href={`/${lang}/`}>
  <title>Redirecting to pricing...</title>
</head>
<body>
  <p>Redirecting to <a href={`/${lang}/#pricing`}>pricing</a>...</p>
</body>
</html>
