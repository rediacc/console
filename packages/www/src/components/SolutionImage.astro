---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

export interface Props {
  imageSrc: ImageMetadata | string;
  imageAlt: string;
  title?: string;
  description?: string;
  variant?: 'light' | 'dark';
}

const { imageSrc, imageAlt, title, description, variant = 'light' } = Astro.props;
const isOptimized = typeof imageSrc !== 'string';
---

<section class={`solution-image-section ${variant}`}>
  <div class="container">
    {(title || description) && (
      <div class="solution-image-header">
        {title && <h2 class="solution-image-title">{title}</h2>}
        {description && <p class="solution-image-description">{description}</p>}
      </div>
    )}

    <div class="solution-image-container">
      {isOptimized ? (
        <Image
          src={imageSrc as ImageMetadata}
          alt={imageAlt}
          class="solution-image"
          width={800}
          loading="lazy"
          decoding="async"
          quality={90}
        />
      ) : (
        <img
          src={imageSrc as string}
          alt={imageAlt}
          class="solution-image"
          width="800"
          height="450"
          loading="lazy"
          decoding="async"
        />
      )}
    </div>
  </div>
</section>

<style>
  .solution-image-section {
    padding: var(--space-16) 0;
  }

  .solution-image-section.light {
    background-color: var(--color-bg);
  }

  .solution-image-section.dark {
    background-color: var(--color-bg-dark);
    color: var(--color-bg-alt);
  }

  .solution-image-header {
    text-align: center;
    margin-bottom: var(--space-8);
    max-width: var(--container-md);
    margin-inline: auto;
  }

  .solution-image-title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--space-4);
    color: inherit;
  }

  .solution-image-description {
    font-size: var(--font-size-lg);
    color: inherit;
    opacity: var(--opacity-90);
    line-height: var(--leading-relaxed);
  }

  .solution-image-container {
    margin: 0 auto;
    max-width: 800px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, var(--opacity-10));
    aspect-ratio: 800 / 450;
    background-color: var(--color-bg);
  }

  .solution-image {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 48rem) {
    .solution-image-section {
      padding: var(--space-12) 0;
    }

    .solution-image-title {
      font-size: var(--font-size-2xl);
    }

    .solution-image-description {
      font-size: var(--font-size-base);
    }
  }
</style>
