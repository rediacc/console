# E2E Test Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Web Application URL
# =============================================================================
# Playwright will start Vite dev server automatically and test against it.
# This tests the current SOURCE CODE, not Docker container assets.
E2E_BASE_URL=http://localhost:3000/console/

# =============================================================================
# API Backend Configuration
# =============================================================================
# The Vite dev server proxies /api/* requests to the backend.
# Local: Uses default http://localhost:7322 (via ./go system up)
# CI: Set VITE_API_URL to the Cloudflare tunnel URL

# For CI or remote backend (uncomment and set to tunnel URL)
# VITE_API_URL=https://xxx.trycloudflare.com

# =============================================================================
# Registration Test Settings
# =============================================================================
# Registration tests create NEW accounts using:
# - Unique email: e2e-register-{timestamp}@rediacc.local (auto-generated)
# - Complex password: TestPass123! (from TEST_CREDENTIALS.TEST_PASSWORD)
# - Verification code below (only works when CI=true in middleware)
TEST_VERIFICATION_CODE=AAA111

# =============================================================================
# Timeout Settings (milliseconds)
# =============================================================================
API_TIMEOUT=10000
PAGE_TIMEOUT=30000

# =============================================================================
# Test Settings
# =============================================================================
STOP_ON_FAILURE=false

# =============================================================================
# Video Settings
# =============================================================================
# Show visual interaction indicators (click/focus) in video recordings.
E2E_HIGHLIGHT=false

# Slow down browser actions by N milliseconds for watchable video recordings.
# CI uses 800ms. Set to 0 or leave unset for full-speed execution.
PWSLOWMO=

# =============================================================================
# VM Deployment (for resource tests)
# =============================================================================
# Set to 'true' to enable VM-dependent tests
VM_DEPLOYMENT=false
VM_WORKER_IPS=
VM_MACHINE_USER=muhammed
VM_MACHINE_PASSWORD=
