{
  "name": "@rediacc/bridge-tests",
  "version": "0.4.80",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "clean:reports": "rimraf reports test-results",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "test": "playwright test",
    "test:01-checks": "playwright test tests/01-system-checks.test.ts",
    "test:02-machine": "playwright test tests/02-machine-setup.test.ts",
    "test:03-datastore": "playwright test tests/03-datastore-lifecycle.test.ts",
    "test:04-repository": "playwright test tests/04-repository-lifecycle.test.ts",
    "test:05-rediaccfiles": "playwright test tests/05-rediaccfiles-updown.test.ts",
    "test:06-daemon": "playwright test tests/06-daemon-operations.test.ts",
    "test:07-container": "playwright test tests/07-container-operations.test.ts",
    "test:08-ceph-pool": "playwright test --config=playwright.ceph.config.ts tests/ceph/08-ceph-pool-image.test.ts",
    "test:09-ceph-clone": "playwright test --config=playwright.ceph.config.ts tests/ceph/09-ceph-snapshot-clone.test.ts",
    "test:10-backup": "playwright test tests/10-backup-checkpoint.test.ts",
    "test:11-multi": "playwright test tests/11-multi-machine.test.ts",
    "test:12-integration": "playwright test tests/12-full-integration.test.ts",
    "test:13-fork": "playwright test tests/13-postgres-fork-isolation.test.ts",
    "test:14-vault": "playwright test tests/14-vault-builder.test.ts",
    "test:15-storage": "playwright test tests/15-storage-backup.test.ts",
    "test:16-setup-params": "playwright test tests/16-setup-installation-params.test.ts",
    "test:17-prep-only": "playwright test tests/17-repository-prep-only.test.ts",
    "test:18-ops": "playwright test tests/18-ops-workflow.test.ts",
    "test:19-rustfs": "playwright test tests/19-rustfs-operations.test.ts",
    "test:20-image": "playwright test tests/20-image-build.test.ts",
    "test:21-local": "playwright test tests/21-local-executor.test.ts",
    "test:22-setup": "playwright test tests/22-setup-command.test.ts",
    "test:bridge:ceph": "playwright test --config=playwright.ceph.config.ts",
    "test:ceph": "playwright test --config=playwright.ceph.config.ts",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:install": "playwright install",
    "test:lifecycle": "playwright test --grep @lifecycle",
    "test:report": "playwright show-report reports/bridge --port 9323",
    "test:ui": "playwright test --ui",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@opentelemetry/context-zone": "^2.5.0",
    "@opentelemetry/core": "^2.5.0",
    "@opentelemetry/instrumentation": "^0.211.0",
    "@opentelemetry/instrumentation-fetch": "^0.211.0",
    "@opentelemetry/instrumentation-xml-http-request": "^0.211.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/sdk-trace-web": "^2.5.0",
    "@playwright/test": "^1.56.1",
    "@rediacc/provisioning": "*",
    "@rediacc/shared": "*",
    "@vitest/coverage-v8": "^4.0.18",
