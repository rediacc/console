    "commander": "^14.0.3",
    "dotenv": "^16.4.5",
    "react-i18next": "^16.5.4",
    "ssh2": "^1.16.0",
    "unist-util-visit": "^5.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ssh2": "^1.15.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
