#!/bin/bash

# === Renet Compose ===
# Uses the network-isolated docker socket automatically set by renet
# via DOCKER_HOST=unix:///var/run/rediacc/docker-{networkID}.sock

_compose() {
  docker compose "$@"
}

prep() {
  echo "Pulling nginx image..."
  docker pull nginx:alpine
  return $?
}

up() {
  echo "Starting nginx..."
  _compose up -d
  return $?
}

down() {
  echo "Stopping nginx..."
  _compose down -v
  return $?
}
