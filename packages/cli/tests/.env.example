# CLI Test Environment Configuration
# Copy to .env and customize as needed.

# =============================================================================
# API Configuration
# =============================================================================

# API endpoint (local or remote)
CLI_API_URL=http://localhost/api

# Default test credentials (used if not creating fresh account)
CLI_MASTER_EMAIL=admin@rediacc.io
CLI_MASTER_PASSWORD=admin

# Master password for vault encryption (separate from login password)
# If not set, defaults to CLI_MASTER_PASSWORD for backward compatibility
CLI_VAULT_MASTER_PASSWORD=

# =============================================================================
# Execution Configuration
# =============================================================================

# CLI command timeout in milliseconds (default: 30000)
CLI_TIMEOUT=30000

# =============================================================================
# Test Environment
# =============================================================================

# Set to 1 to enable CI mode (uses activation code 111111)
CI=false

# Set to 1 for debug output
DEBUG=false
