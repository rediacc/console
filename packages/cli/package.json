{
  "name": "@rediacc/cli",
  "version": "0.4.14",
  "type": "module",
  "description": "Rediacc CLI - Command line interface for Rediacc operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "rdc": "./dist/cli-bundle.cjs"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "node bundle.mjs",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "playwright test --config tests/playwright.config.ts",
    "test:run": "playwright test --config tests/playwright.config.ts",
    "test:core": "playwright test --config tests/playwright.config.ts --project=core",
    "test:resources": "playwright test --config tests/playwright.config.ts --project=resources",
    "test:operations": "playwright test --config tests/playwright.config.ts --project=operations",
    "test:security": "playwright test --config tests/playwright.config.ts --project=security",
    "test:ceph": "playwright test --config tests/playwright.config.ts --project=ceph",
    "test:errors": "playwright test --config tests/playwright.config.ts --project=errors",
    "test:edition": "playwright test --config tests/playwright.config.ts --project=edition",
    "test:e2e": "playwright test --config tests/playwright.config.ts --project=e2e",
    "test:vscode": "playwright test --config tests/playwright.config.ts --project=vscode",
    "test:report": "playwright show-report tests/reports/cli",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build && npm run build:bundle",
    "bun:dev": "bun run src/index.ts",
    "bun:start": "bun run dist/index.js",
    "bun:test": "bun test",
    "build:exe": "bun build --compile --minify --sourcemap src/index.ts --outfile dist/rdc",
    "build:exe:win": "bun build --compile --minify --target=bun-windows-x64 src/index.ts --outfile dist/rdc-win.exe",
    "build:exe:mac": "bun build --compile --minify --target=bun-darwin-x64 src/index.ts --outfile dist/rdc-mac",
    "build:exe:mac-arm": "bun build --compile --minify --target=bun-darwin-arm64 src/index.ts --outfile dist/rdc-mac-arm",
    "build:exe:linux": "bun build --compile --minify --target=bun-linux-x64 src/index.ts --outfile dist/rdc-linux",
    "build:exe:all": "bun run build:exe:win && bun run build:exe:mac && bun run build:exe:mac-arm && bun run build:exe:linux"
  },
  "dependencies": {
    "inquirer": "^13.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.0",
    "@opentelemetry/resources": "^1.30.0",
    "@opentelemetry/sdk-node": "^0.57.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@rediacc/shared": "*",
    "@rediacc/shared-desktop": "*",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^25.0.3",
    "axios": "^1.13.2",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "dotenv": "^16.3.1",
    "esbuild": "^0.27.1",
    "execa": "^9.6.1",
    "i18next": "^23.16.5",
    "ora": "^9.0.0",
    "otpauth": "^9.4.1",
    "rimraf": "^6.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "yaml": "^2.7.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "dist/cli-bundle.cjs"
  ],
  "keywords": [
    "rediacc",
    "cli",
    "devops",
    "automation"
  ],
  "author": "Rediacc",
  "license": "MIT"
}
