{
  "name": "Rediacc Console",
  "image": "ghcr.io/rediacc/devcontainer:latest",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb",
    "storage": "32gb"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Console Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash .devcontainer/init-submodules.sh && npm install && npm run build:packages",
  "postStartCommand": "npm install",
  "remoteEnv": {
    "PORT": "3000"
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "rediacc/middleware": { "permissions": { "contents": "write" } },
        "rediacc/renet": { "permissions": { "contents": "write" } },
        "rediacc/homebrew-tap": { "permissions": { "contents": "write" } },
        "rediacc/license-server": { "permissions": { "contents": "write" } }
      }
    },
    "vscode": {
      "extensions": [
        "biomejs.biome",
        "dbaeumer.vscode-eslint",
        "GitHub.vscode-github-actions",
        "ms-playwright.playwright",
        "astro-build.astro-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "ms-python.python",
        "ms-vscode.vscode-typescript-next",
        "ms-dotnettools.csharp"
      ]
    }
  }
}
