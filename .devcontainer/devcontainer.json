{
  "name": "Rediacc Console",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.24"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "9.0"
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Console Dev Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "bash .devcontainer/init-submodules.sh && npm install && npm run build:packages && npx playwright install && curl -fsSL https://claude.ai/install.sh | bash && npm i -g @openai/codex && pip install uv && uv tool install kimi-cli",
  "postStartCommand": "npm install",
  "remoteEnv": {
    "PORT": "3000"
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "rediacc/middleware": { "permissions": { "contents": "write" } },
        "rediacc/renet": { "permissions": { "contents": "write" } },
        "rediacc/homebrew-tap": { "permissions": { "contents": "write" } },
        "rediacc/license-server": { "permissions": { "contents": "write" } }
      }
    },
    "vscode": {
      "extensions": [
        "biomejs.biome",
        "dbaeumer.vscode-eslint",
        "GitHub.vscode-github-actions",
        "ms-playwright.playwright",
        "astro-build.astro-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "eamodio.gitlens",
        "ms-python.python",
        "ms-vscode.vscode-typescript-next",
        "ms-dotnettools.csharp"
      ]
    }
  }
}
