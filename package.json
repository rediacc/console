{
  "name": "rediacc-console",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/cli",
    "packages/web"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:cli && npm run build:web",
    "build:packages": "npm run build -w @rediacc/shared",
    "build:cli": "npm run build -w @rediacc/cli",
    "build:web": "npm run build -w @rediacc/web",
    "dev": "npm run dev -w @rediacc/web",
    "dev:parity": "npm run build:packages && npm run dev -w @rediacc/web",
    "lint": "eslint .",
    "typecheck": "tsc -b packages/shared packages/cli && npm run typecheck -w @rediacc/web",
    "clean": "npm run clean -w @rediacc/shared && npm run clean -w @rediacc/cli && npm run clean -w @rediacc/web",
    "format": "biome format --write packages/",
    "format:check": "biome format packages/",
    "format:imports": "biome check --write --organize-imports-enabled=true packages/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
