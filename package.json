{
  "name": "rediacc-console",
  "version": "0.4.81",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/shared",
    "packages/shared-desktop",
    "packages/provisioning",
    "packages/cli",
    "packages/web",
    "packages/desktop",
    "packages/e2e",
    "packages/bridge-tests",
    "packages/www",
    "packages/json"
  ],
  "scripts": {
    "build": "npm run build:packages && npm run build:cli && npm run build:web",
    "build:all-sites": "npm run build:www && npm run build:json && npm run build:web",
    "build:cli": "npm run build -w @rediacc/cli",
    "build:json": "npm run build -w @rediacc/json",
    "build:packages": "npm run build -w @rediacc/shared && npm run build -w @rediacc/shared-desktop && npm run build -w @rediacc/provisioning",
    "build:web": "npm run build -w @rediacc/web",
    "build:www": "npm run build -w @rediacc/www",
    "check:actions": "tsx scripts/check-actions.ts",
    "check:deps": "tsx scripts/check-deps.ts",
    "check:format": "biome format packages/",
    "check:i18n": "tsx scripts/check-translation-hashes.ts && tsx scripts/check-translation-completeness.ts && tsx scripts/check-docs-inline-translations.ts && tsx scripts/check-www-only-translations.ts && tsx scripts/check-docs-untranslated-text.ts && npm run validate:cli-docs -w @rediacc/www",
    "check:i18n:completeness": "tsx scripts/check-translation-completeness.ts",
    "check:i18n:docs": "tsx scripts/check-docs-inline-translations.ts",
    "check:i18n:hashes": "tsx scripts/check-translation-hashes.ts",
    "check:i18n:untranslated": "tsx scripts/check-docs-untranslated-text.ts",
    "check:i18n:www-only": "tsx scripts/check-www-only-translations.ts",
    "check:lint": "eslint . --max-warnings 0",
    "check:test": "npm run test:run -w @rediacc/web",
    "check:types": "tsc -b packages/shared packages/shared-desktop packages/provisioning packages/cli packages/desktop packages/e2e && npm run typecheck -w @rediacc/web",
    "check:unused": "knip --treat-config-hints-as-errors",
    "check:version": "tsx scripts/check-workspace-versions.ts && syncpack lint",
    "clean": "npm run clean -w @rediacc/shared && npm run clean -w @rediacc/cli && npm run clean -w @rediacc/web",
    "dev": "npm run dev -w @rediacc/web",
    "dev:parity": "npm run build:packages && npm run dev -w @rediacc/web",
    "fix": "npm run fix:format && npm run fix:lint",
    "fix:all": "npm run fix:format && npm run fix:lint && npm run fix:unused && npm run fix:i18n",
    "fix:format": "biome format --write packages/",
    "fix:i18n": "tsx scripts/generate-translation-hashes.ts",
    "fix:imports": "biome check --write packages/",
    "fix:lint": "eslint . --fix",
    "fix:unused": "knip --fix --fix-type files,dependencies",
    "fix:version": "syncpack fix-mismatches && syncpack format",
    "format": "biome format --write packages/",
    "format:check": "biome format packages/",
    "format:imports": "biome check --write packages/",
    "generate:i18n-types": "tsx scripts/generate-translation-types.ts",
    "i18n:check-hashes": "tsx scripts/check-translation-hashes.ts",
    "i18n:coverage": "tsx scripts/i18n-coverage-report.ts",
    "i18n:generate-hashes": "tsx scripts/generate-translation-hashes.ts",
    "i18n:sync": "tsx scripts/sync-translations.ts",
    "i18n:update-hashes": "tsx scripts/generate-translation-hashes.ts",
    "lint": "eslint .",
    "lint:unused": "knip --treat-config-hints-as-errors",
    "lint:unused:fix": "knip --fix",
    "quality": "npm run check:version && npm run check:deps && npm run check:actions && npm run check:lint && npm run check:unused && npm run check:format && npm run check:i18n && npm run check:types && npm run check:test",
    "test": "npm run test -w @rediacc/web",
    "test:bridge": "npm test -w @rediacc/bridge-tests",
    "test:coverage": "npm run test:coverage -w @rediacc/web",
    "test:run": "npm run test:run -w @rediacc/web",
    "test:ui": "npm run test:ui -w @rediacc/web",
    "typecheck": "tsc -b packages/shared packages/shared-desktop packages/provisioning packages/cli packages/desktop packages/e2e && npm run typecheck -w @rediacc/web",
    "version:check": "tsx scripts/check-workspace-versions.ts && syncpack lint",
    "version:check:deps": "syncpack lint",
    "version:fix": "syncpack fix-mismatches && syncpack format",
    "version:list": "syncpack list-mismatches"
  },
  "dependencies": {
    "proper-lockfile": "^4.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^1.0.0",
    "@types/proper-lockfile": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "astro": "^5.16.11",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-regexp": "^3.0.0",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.3.0",
    "knip": "^5.76.3",
    "syncpack": "^13.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "overrides": {
    "glob": "^11.0.0",
    "rimraf": "^6.0.0",
    "inflight": "npm:@isaacs/inflight@^1.0.1",
    "cacache": "^18.0.0",
    "@npmcli/move-file": "npm:@npmcli/fs@^3.1.0"
  }
}
